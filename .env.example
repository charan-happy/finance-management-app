# Database Configuration
# Set to 'db', 'local', or 'hybrid'
VITE_DATA_MODE=hybrid

# Neon.tech Database URL (PostgreSQL)
# Get this from your Neon.tech dashboard
VITE_DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Broker API Configuration
# Set to 'true' to use mock broker data (for development)
VITE_USE_MOCK_BROKER=true

# Upstox Configuration
VITE_UPSTOX_CLIENT_ID=
VITE_UPSTOX_CLIENT_SECRET=
VITE_UPSTOX_REDIRECT_URI=http://localhost:5173

# AngelOne Configuration
VITE_ANGELONE_CLIENT_ID=
VITE_ANGELONE_CLIENT_SECRET=

# Fyers Configuration
VITE_FYERS_CLIENT_ID=
VITE_FYERS_CLIENT_SECRET=
VITE_FYERS_REDIRECT_URI=http://localhost:5173

# Gemini API Key (for AI assistant)
VITE_GEMINI_API_KEY=

# Application Configuration
VITE_APP_URL=http://localhost:5173
